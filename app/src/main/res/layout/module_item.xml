<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="21dp"
        android:layout_margin="11dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/module_item_background"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/moduleName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Module Name"
                android:textSize="21dp"
                android:padding="11dp"
                android:textColor="#F3EC7E"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_outside"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_inside"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="21dp"
            />

        <TextView
            android:id="@+id/progressValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:text="0%"
            android:layout_marginRight="27dp"
            android:textSize="11dp"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>